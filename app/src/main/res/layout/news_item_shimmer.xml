<?xml version="1.0" encoding="utf-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/title_shimmer"
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="40dp"
            android:background="@drawable/rounded_corner_shimmer_layout"
            />
        <View
            android:id="@+id/imageview_shimmer"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@id/title_shimmer"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/rounded_corner_shimmer_layout"/>
        <View
            android:id="@+id/description_shimmer"
            android:layout_width="250dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@id/title_shimmer"
            app:layout_constraintStart_toEndOf="@id/imageview_shimmer"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_corner_shimmer_layout"
            android:layout_marginStart="15dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
