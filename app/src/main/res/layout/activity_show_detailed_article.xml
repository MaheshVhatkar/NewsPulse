<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.mynewsapplication.viewModel.ShowArticleViewModel" />
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ShowDetailedArticleActivity">

    <TextView
        android:id="@+id/title_textview"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:text="@{viewModel.title}"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/extra_options_imagebutton"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="22sp"
        android:textStyle="bold"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/extra_options_imagebutton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/title_textview"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/baseline_more_vert_24"/>

    <ImageView
        android:id="@+id/news_imageview"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintTop_toBottomOf="@id/title_textview"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/rounded_corner"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:contentDescription="@string/news_image" />

    <TextView
        android:id="@+id/weblink_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@{viewModel.webLink}"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:clickable="true"
        android:onClick="@{() -> viewModel.webLinkClickListener()}"
        android:autoLink="web"
        app:layout_constraintTop_toBottomOf="@id/description_scrollview"
        android:textSize="15sp"
        android:textColor="@color/purple_500"
        android:textStyle="italic"
        android:focusable="true" />

    <ScrollView
        android:id="@+id/description_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/news_imageview"
        android:orientation="vertical"
        android:scrollbars="vertical">

        <TextView
            android:id="@+id/description_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{viewModel.description}"
            android:textSize="18sp"/>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>